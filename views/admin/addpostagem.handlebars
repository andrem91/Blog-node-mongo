<div class="card mx-auto w-75" >
    <h2 class="card-header text-center">Nova Postagem</h2>
    <div class="card-body">
        <form action="/admin/postagens/nova" method="POST">
            <div class="form-group">
                <label for="titulo">Título: </label>
                <input type="text" id="titulo" name="titulo" placeholder="Título da postagem" class="form-control">
            </div>
            <div class="form-group">
                <label for="slug">Slug: </label>
                <input type="text" id="slug" name="slug" placeholder="Slug da postagem" class="form-control">
            </div>
            <div class="form-group">
                <label for="descricao">Descrição: </label>
                <input type="text" id="descricao" name="descricao" placeholder="Descrição da postagem" class="form-control">
            </div>
            <div class="form-group">
                <label for="conteudo">Conteúdo: </label>
                <textarea name="conteudo" id="conteudo" rows="5" class="form-control" placeholder="Conteúdo da postagem"></textarea>
            </div>
            <div class="form-group">
                <label for="categoria">Categoria: </label>
                <select name="categoria" id="categoria" class="custom-select">
                    {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                    {{/each}}
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Criar postagem</button>
        </form>
    </div>
</div>
